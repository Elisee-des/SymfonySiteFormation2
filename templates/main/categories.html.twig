{% extends "base.main.html.twig" %}

{% block titre %}{% endblock %}

{% block main %}

	<div id="portfolio" class="our-portfolio section">
		<div class="portfolio-left-dec">
			<img src="{{ asset("asset/images/portfolio-left-dec.png") }}" alt="">
		</div>
		<div class="container">
			<div class="row">
				<div class="col-lg-6 offset-lg-3">
					<div class="section-heading">
						<h2>Nos
							<em>Categories</em>
							de
							<span>Formation</span>
						</h2>
						<span>Categories</span>
					</div>
				</div>
			</div>
		</div>
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="owl-carousel owl-portfolio">
						{% for categorie in categories %}
							<div class="item">
								<div class="thumb">
									{% if categorie.image %}
										<img src="{{ asset("images/"~categorie.image) }}" alt="">
									{% endif %}
									<div class="hover-effect">
										<div class="inner-content">
											<a rel="sponsored" href="{{ path("detail_categories", {id: categorie.id}) }}" target="_parent">
												<h4>{{categorie.nom}}</h4>
											</a>
											<span>{{categorie.description|slice(0, 15)}}</span>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
