{% extends "base.admin.html.twig" %}

{% block titre %}Gestion des candidature etant retenue
{% endblock %}

{% block body %}

	<div class="card">
		<br>
		<div class="card-hearder text-center">
			<h2>Exporter en Excel la liste des candidats ayant ete retenue</h2>
		</div>

		<div>
			<a href="{{ path("admin_formation_creation") }}" class="btn btn-primary float-right btnAction">Ajouter une formation</a>
		</div>
		<div class="card-body">
			<table id="example" class="table table-striped nowrap" style="width:100%">
				<thead>
					<tr>
						<th>Theme de formation</th>
						<th>Categorie de formation</th>
						<th>Retenu</th>
						<th>Donne√©s</th>
					</tr>
				</thead>
				<tbody>
					{% for formation in formations %}
						<tr>
							<td>{{formation.titre}}</td>
							<td>{{formation.categorie.nom}}</td>
							<td>
								<a href="{{ path("admin_candidature_formation_retenu", {id: formation.id}) }}" class="btn btn-outline-primary">Voir liste</a>
							</td>
							<td>
								<a href="#" class="btn btn-outline-dark" >Exporter</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script>
		$(document).ready(function () {
$('#example').DataTable();
});
	</script>
{% endblock %}
